FROM golang:alpine as builder

RUN apk update && apk add git && apk add ca-certificates

RUN adduser -D -g '' appuser 

COPY am $GOPATH/src/gopkg.linkai.io/v1/repos/am/
COPY database $GOPATH/src/gopkg.linkai.io/v1/repos/database
WORKDIR $GOPATH/src/gopkg.linkai.io/v1/repos/database

RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -a -installsuffix cgo -ldflags '-w -s' -o /go/bin/pgm cmd/pgm/main.go

# STEP 2 build a small image
# start from scratch
FROM scratch
# Copy our static executable and supporting
COPY --from=builder /etc/ssl/certs/ca-certificates.crt /etc/ssl/certs/
COPY --from=builder /etc/passwd /etc/passwd
COPY --from=builder /go/bin/pgm /go/bin/pgm 
COPY --from=builder $GOPATH/src/gopkg.linkai.io/v1/repos/database/pg_migrations /tmp/migrations
USER appuser 

ENTRYPOINT ["/go/bin/pgm", "-dir", "/tmp/migrations", "up"]